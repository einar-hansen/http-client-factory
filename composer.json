{
    "name": "einar/http-client-factory",
    "description": "Common interface for HTTP client factories",
    "keywords": [
        "einar",
        "einar-johan",
        "http",
        "http-client",
        "http-client-factory",
        "psr",
        "psr-18"
    ],
    "homepage": "https://github.com/einarjhansen/http-client-factory",
    "license": "MIT",
    "authors": [
        {
            "name": "Einar-Johan Hansen",
            "email": "hello@einarhansen.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/larastan": "^2.0.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Einar\\Http\\Factories\\": "src"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
